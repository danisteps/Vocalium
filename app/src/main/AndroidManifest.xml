<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufpe.cin.vocalium" >

    <uses-sdk android:minSdkVersion="16" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Main Activity"
            android:theme="@style/AppTheme"
        />
        <activity
            android:name=".StudentRecord"
            android:label="@string/title_activity_student_record"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TutorHearComm"
            android:label="@string/title_activity_tutor_hear_comm"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TutorChecklist"
            android:label="@string/title_activity_tutor_checklist"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StudentListenComment"
            android:label="@string/title_activity_student_listen_comment"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
