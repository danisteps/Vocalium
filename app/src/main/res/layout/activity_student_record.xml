<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_weight="50">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom">

            <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:id="@+id/student_record_chronometer"
                android:layout_gravity="bottom"
                android:textColor="#59656b" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_weight="50">

        <ImageButton
            android:id="@+id/button_play_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@null"
            android:paddingTop="20dip"
            android:src="@drawable/play_button"
            android:layout_weight="30"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:layout_weight="70"
            android:weightSum="1">


            <Button
                android:text="Deletar"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="40dp"
                android:id="@+id/button_delete_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/rounded_corners_orange"
                android:scaleType="fitCenter"
                android:src="@drawable/delete_button"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp" />


            <Button
                android:text="Enviar"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:id="@+id/button_send_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/rounded_corners_orange"
                android:scaleType="fitCenter"
                android:src="@drawable/send_button"
                android:layout_weight="0.5"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>